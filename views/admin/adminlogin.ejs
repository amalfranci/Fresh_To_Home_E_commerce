  

<%- include("./partials/header") %>

<body>

    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Sign In Start -->
        
            <div  class="container-fluid" style="border-radius: 3px;">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <form action="admin/" method="post">
                        <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="index.html" class="">
                                <h3 class="     text-primary"><i class="fa me-2"></i></h3>
                            </a>
                            <div class="text-center justify-content-center"><h2 >Admin Login</h2></div>
                            
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="floatingInput" placeholder="email" name="email" required >
                            <label for="floatingInput">email</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" required>
                            <label for="floatingPassword">Password</label>
                        </div>
                        
                       
                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Login</button>
                            <div class="erorr text-center">
                                <% if (message && message.length > 0) { %>
                                    <p style="color: #963106;"><%= message %></p>
                                  <% } %>
                            </div>
                             
                        </div>
                        
                     </form>
          </div>
                </div>
       </div>
                    
               
        <!-- Sign In End -->
    </div>
    
<%- include("./partials/footer") %>