              <script>
                // Add an event listener to the downloadSalesReport button
                document.getElementById('downloadSalesReport').addEventListener('click', function () {
                  // Create a new XMLHttpRequest
                  const xhr = new XMLHttpRequest();
              
                  // Set up the request
                  xhr.open('GET', '/admin/generate_sales_report_pdf', true);
                  xhr.responseType = 'blob'; // Set the response type to blob to handle binary data
              
                  // On successful request completion
                  xhr.onload = function () {
                    if (xhr.status === 200) {
                      // Create a blob URL from the received blob data
                      const blobUrl = URL.createObjectURL(xhr.response);
              
                      // Create an anchor element to trigger the download
                      const downloadLink = document.createElement('a');
                      downloadLink.href = blobUrl;
                      downloadLink.download = 'user_wise_sales_report.pdf'; // Set the filename for the downloaded PDF
                      downloadLink.click();
              
                      // Release the URL object after the download has started
                      URL.revokeObjectURL(blobUrl);
                    } else {
                      console.error('Error generating PDF sales report:', xhr.status);
                    }
                  };
              
                  // On request error
                  xhr.onerror = function () {
                    console.error('Error generating PDF sales report.');
                  };
              
                  // Send the request
                  xhr.send();
                });
              </script>
