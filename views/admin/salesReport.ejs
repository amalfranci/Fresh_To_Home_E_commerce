            <!-- JavaScript code -->
            <script>
              // Function to handle report download based on the selected period
              function downloadReport(period) {
                const xhr = new XMLHttpRequest();
                xhr.open('GET', `/admin/sales_report_pdf?period=${period}`, true);
                xhr.responseType = 'blob';
            
                xhr.onload = function () {
                  if (xhr.status === 200) {
                    const blobUrl = URL.createObjectURL(xhr.response);
                    const downloadLink = document.createElement('a');
                    downloadLink.href = blobUrl;
                    downloadLink.download = `${period.toLowerCase()}_sales_report.pdf`;
                    downloadLink.click();
                    URL.revokeObjectURL(blobUrl);
                  } else {
                    console.error('Error generating PDF sales report:', xhr.status);
                  }
                };
            
                xhr.onerror = function () {
                  console.error('Error generating PDF sales report.');
                };
            
                xhr.send();
              }
            
              // Add event listeners for dropdown items
              document.getElementById('oneDayReport').addEventListener('click', function () {
                downloadReport('daily');
              });
            
              document.getElementById('weeklyReport').addEventListener('click', function () {
                downloadReport('weekly');
              });
            
              document.getElementById('monthlyReport').addEventListener('click', function () {
                downloadReport('monthly');
              });
            
              // Add an event listener to the downloadSalesReport button
              document.getElementById('downloadSalesReport').addEventListener('click', function () {
                // Call the downloadReport function with 'user_wise' as the period
                downloadReport('user_wise');
              });
            
              // Add an event listener to the SalesReport button
              document.getElementById('SalesReport').addEventListener('click', function () {
                // Call the downloadReport function with 'overall' as the period
                downloadReport('overall');
              });
            </script>
        
           
