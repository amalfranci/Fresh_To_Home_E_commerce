        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">Banner Title</th>
                  <th scope="col">Image</th>
                  <th scope="col">Link</th>
                  <th scope="col">Start Date</th>
                  <th scope="col">End Date</th>
                  <th scope="col">Action</th>
                  <th scope="col">Remove</th>
