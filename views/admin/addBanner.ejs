                                <form action="/admin/editbanner/<%= banner._id %>" method="post" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label for="bannerTitle<%= index %>" class="form-label">Title</label>
                                        <select class="form-control" id="bannerTitle<%= index %>" name="title" required>
