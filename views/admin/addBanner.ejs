    <script>
        function submitEditForm(index) {
          const form = document.getElementById('editBannerForm' + index);
          const formData = new FormData(form);
      
          fetch(form.action, {
            method: 'POST',
            body: formData
          })
          .then(response => response.json())
          .then(result => {
            console.log(result); // Handle the server response (success or error)
      
            if (result) {
              // Optionally, you can show a success message or take other actions upon successful update
              alert('Banner updated successfully!');
              window.location.reload(); // Refresh the page to see the updated banner in the table
            }
          })
          .catch(error => {
            console.error('Error:', error);
            // Handle the error, show an error message, or take appropriate action.
          });
        }
      </script>
      <script>
        function deleteBanner(bannerId) {
            if (confirm("Are you sure you want to delete this banner?")) {
                fetch(`/admin/deletebanner/${bannerId}`, {
                    method: 'DELETE',
                })
                .then(response => response.json())
                .then(result => {
                    console.log(result); // Handle the server response (success or error)
                    if (result.success) {
                        window.location.reload(); // Reload the page to update the table after deletion
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    // Handle the error, show an error message, or take appropriate action.
                });
            }
        }
    </script>
    
