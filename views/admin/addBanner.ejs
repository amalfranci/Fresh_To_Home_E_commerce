                    <td> <a href="#" class="btn btn-danger btn-sm" onclick="deleteBanner('<%= banner._id %>')">Delete</a></td>
                  </tr>
                  <div class="modal fade" id="editBannerModal<%= index %>" tabindex="-1" aria-labelledby="editBannerModalLabel<%= index %>" aria-hidden="true">
