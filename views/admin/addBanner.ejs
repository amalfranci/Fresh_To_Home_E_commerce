                                            <option value="MAIN" <%= banner.title === 'MAIN' ? 'selected' : '' %>>MAIN</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="bannerImage<%= index %>" class="form-label">Banner Image</label>
                                        <input type="file" class="form-control" id="bannerImage<%= index %>" name="banner" accept="image/*" required>
                                        <!-- Display the current banner image -->
                                        <img src="/BannerImage/<%= banner.image %>" alt="Current Banner Image" style="max-width: 50%; max-height: 50PX; margin-top: 10px;">
                                    </div>
                                    <div class="mb-3">
                                        <label for="bannerLink<%= index %>" class="form-label">Link</label>
                                        <input type="text" class="form-control" id="bannerLink<%= index %>" name="link" value="<%= banner.link %>" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="bannerStartDate<%= index %>" class="form-label">Start Date</label>
                                        <input type="date" class="form-control" id="bannerStartDate<%= index %>" name="startDate" value="<%= banner.startDate.toISOString().split('T')[0] %>" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="bannerEndDate<%= index %>" class="form-label">End Date</label>
                                        <input type="date" class="form-control" id="bannerEndDate<%= index %>" name="endDate" value="<%= banner.endDate.toISOString().split('T')[0] %>" required>
                                    </div>
                                    <div class="modal-footer">
